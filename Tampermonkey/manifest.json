{
  "manifest_version": 3,
  "name": "Lyra Auto Loader",
  "default_locale": "en",
  "version": "1.0",
  "description": "Automatically loads Lyra.js on supported AI chat platforms.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://claude.easychat.top/*",
    "https://pro.easychat.top/*",
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://grok.com/*",
    "https://x.com/i/grok*",
    "https://gemini.google.com/*",
    "https://notebooklm.google.com/*",
    "https://aistudio.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://claude.easychat.top/*",
        "https://pro.easychat.top/*",
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://grok.com/*",
        "https://x.com/i/grok*",
        "https://gemini.google.com/*",
        "https://notebooklm.google.com/*",
        "https://aistudio.google.com/*"
      ],
      "js": ["fflate.js", "lyra_content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
        "resources": ["fflate.js"],
        "matches": ["<all_urls>"]
    }
  ]
}
