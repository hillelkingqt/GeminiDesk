{
  "manifest_version": 3,
  "name": "AI Studio RTL Pro",
  "version": "1.0",
  "description": "RTL toggler for Google AI Studio with Math support",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "icons": {
    "128": "icon.svg"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}